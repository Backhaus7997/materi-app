# Database Configuration
# Railway will provide this automatically when you add PostgreSQL
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"

# JWT Secret - Generate a secure random string
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Node Environment
NODE_ENV="production"

# Port (Railway sets this automatically)
PORT=3001

# Frontend URL for CORS (your Vercel deployment)
FRONTEND_URL="https://materi-app-eight.vercel.app"

# Email Configuration (for password reset)
# For Gmail: use smtp.gmail.com, port 587, and an App Password
# To get Gmail App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_SECURE="false"
EMAIL_USER="tu-email@gmail.com"
EMAIL_PASS="tu-app-password-de-16-caracteres"

# Optional: Logging level
LOG_LEVEL="info"
